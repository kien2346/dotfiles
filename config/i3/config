mode "exit: screen[l]ock log[o]ut, [r]eboot, [s]hutdown" {

  bindsym l exec i3lock -i ~/Pictures/gura-disguish.png, mode "default"

  bindsym o exec i3-msg exit

  bindsym r exec systemctl reboot

  bindsym s exec systemctl poweroff

  bindsym Escape mode "default"

  bindsym Return mode "default"

  bindsym $mod+x mode "default"
}

bindsym $mod+x mode "exit: screen[l]ock log[o]ut, [r]eboot, [s]hutdown"
