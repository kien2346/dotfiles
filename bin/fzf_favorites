#!/bin/bash

list_dir=(
    "$(dirname $HOME)"
    "$HOME"
    "$HOME/.config"
    "$HOME/Workspaces"
    "$HOME/Workspaces/Learning"
    "$HOME/Workspaces/Personal"
    "$HOME/Workspaces/Projects"
    "$HOME/Workspaces/School"
)

find "${list_dir[@]}" -mindepth 1 -maxdepth 1 -type d | fzf --height 40% --reverse --border

